<%= form_for @flick, url: flicks_path, method: :create do |f| %>
  <% if @flick.errors.any? %>
    <ul>
      <% @flick.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :year %><br>
    <%= f.text_field :year %>
  </p>
  <p>
    <%= f.label :synopsis %><br>
    <%= f.text_field :synopsis %>
  </p>
  <p>
    <%= f.submit 'Create Movie' %>
  </p>
<% end %>